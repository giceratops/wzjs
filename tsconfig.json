{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "es2020",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": "./src",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "noImplicitOverride": true
    },
    "include": [
        "src/**/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}